# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

COPY ./CrowdQR.API.csproj ./CrowdQR.API.csproj
RUN dotnet restore ./CrowdQR.API.csproj

COPY . ./
RUN dotnet publish CrowdQR.API.csproj -c Release -o out

# Stage 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/out .

ENV ASPNETCORE_URLS=http://+:5000
EXPOSE 5000

ENTRYPOINT ["dotnet", "CrowdQR.API.dll"]