@page "{slug}"
@model QRModel
@{
    ViewData["Title"] = "QR Code for " + Model.EventName;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Scan to Request Songs</h1>
                </div>
                <div class="card-body text-center">
                    <h2 class="h5 mb-3">@Model.EventName</h2>
                    <p class="text-muted mb-4">Event Code: @Model.Slug</p>

                    <!-- QR Code Image -->
                    <div class="mb-4">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Model.EventUrl"
                             alt="QR Code" class="img-fluid border" style="max-width: 200px;" />
                    </div>

                    <div class="mb-3">
                        <p class="mb-1">Or visit:</p>
                        <a href="@Model.EventUrl" target="_blank">@Model.EventUrl</a>
                    </div>

                    <a href="/event/@Model.Slug" class="btn btn-primary">View Event</a>
                </div>
            </div>
        </div>
    </div>
</div>