@page
@model ApiErrorModel
@{
    ViewData["Title"] = "API Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Communication Error</h1>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                    </div>
                    
                    <h2 class="h5 mb-3">We're having trouble communicating with our servers</h2>
                    
                    <p class="mb-4">@Model.ErrorMessage</p>
                    
                    <div class="mb-3">
                        <a href="@Model.ReturnUrl" class="btn btn-outline-primary me-2">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a href="@Model.ReturnUrl" class="btn btn-primary" onclick="window.location.reload(); return false;">
                            <i class="bi bi-arrow-clockwise"></i> Try Again
                        </a>
                    </div>
                    
                    <div class="mt-4">
                        <p class="text-muted mb-1">If the problem persists, please try again later or contact support.</p>
                        <small class="text-muted">Error recorded at: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>