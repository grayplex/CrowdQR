@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-4">Welcome to CrowdQR</h1>
        <p class="lead">Your Interactive Event Experience Platform</p>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 mb-3 text-primary"></i>
                    <h3 class="card-title">Audience Engagement</h3>
                    <p class="card-text">Connect with your audience in real-time through interactive features and live feedback.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-music-note-beamed display-4 mb-3 text-primary"></i>
                    <h3 class="card-title">DJ Integration</h3>
                    <p class="card-text">Seamless integration with DJ equipment for synchronized light shows and effects.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-qr-code-scan display-4 mb-3 text-primary"></i>
                    <h3 class="card-title">Easy Access</h3>
                    <p class="card-text">Simple QR code scanning to join events and access all features instantly.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-6 offset-md-3 text-center">
            <h2 class="mb-4">How It Works</h2>
            <div class="list-group">
                <div class="list-group-item">
                    <h5 class="mb-1">1. Scan the QR Code</h5>
                    <p class="mb-1">Join the event by scanning the QR code displayed at the venue.</p>
                </div>
                <div class="list-group-item">
                    <h5 class="mb-1">2. Connect Your Device</h5>
                    <p class="mb-1">Your device becomes your personal controller for the event experience.</p>
                </div>
                <div class="list-group-item">
                    <h5 class="mb-1">3. Enjoy the Experience</h5>
                    <p class="mb-1">Interact with the event, control lights, and engage with other attendees.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <a href="/Event?slug=demo" class="btn btn-primary btn-lg">Try Demo Event</a>
    </div>
</div>
